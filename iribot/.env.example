# OpenAI API Key
OPENAI_API_KEY=your-api-key-here
# Model code for OpenAI API
OPENAI_MODEL=gpt-4-vision-preview
# Optional: Set to your OpenAI base URL
OPENAI_BASE_URL=

DEBUG=False

# Shell Configuration
# shell_type: "auto" (default), "bash", or "cmd"
#   - "auto": Auto-detect based on system availability (bash preferred)
#   - "bash": Force use bash shell
#   - "cmd": Force use Windows CMD (Windows only)
SHELL_TYPE=auto

# bash_path: Path to bash executable (used when shell_type is "bash" or "auto")
# On Windows with Git Bash, this might be: C:\Program Files\Git\bin\bash.exe
# On Windows with Cygwin, this might be: C:\cygwin64\bin\bash.exe
# On Unix/Linux, typically: /bin/bash or just "bash"
BASH_PATH=bash

# Tool History Configuration
# Number of rounds after which tool call details are truncated (only tool names are kept)
# Set to 0 to disable truncation, or a positive integer to keep only the last N tool calls
TOOL_HISTORY_ROUNDS=10
